                    android:inputType="number"
                    android:paddingTop="6dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="15dp"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Pembelian"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:paddingStart="15dp"
                    android:paddingBottom="5dp"/>

                <EditText
                    android:id="@+id/etBeli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:background="@drawable/garis"
                    android:paddingBottom="6dp"
                    android:paddingStart="4dp"
                    android:hint="Contoh: 1"
                    android:inputType="number"
                    android:paddingTop="6dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Gratis"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:paddingTop="15dp"
                    android:paddingStart="15dp"
                    android:paddingBottom="5dp"/>

                <EditText
                    android:id="@+id/etGratis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:background="@drawable/garis"
                    android:paddingBottom="6dp"
                    android:lines="1"
                    android:hint="Contoh: 1"
                    android:inputType="number"
                    android:paddingTop="6dp"
                    android:paddingStart="4dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layGratisProdukLain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="40dp"
                android:visibility="invisible"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gambar Produk Gratis"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textColor="#a4a4a4"/>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    card_view:cardBackgroundColor="#fff"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    card_view:cardUseCompatPadding="true"
                    android:onClick="uploadGambar4">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">

                        <ImageView
                            android:padding="5dp"
                            android:id="@+id/gambarPromo4"
                            android:background="#fff"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_add_img"
                            android:scaleType="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignEnd="@+id/btRemove4"/>

                        <ImageButton
                            android:visibility="gone"
                            android:id="@+id/btRemove4"
                            android:onClick="removeImg4v"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/ic_remove"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

